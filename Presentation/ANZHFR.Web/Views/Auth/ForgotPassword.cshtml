@using System.Configuration;
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="form-box" id="login-box">
    <div class="header">Forgot Password</div>
    <form id="resetform" action="#" method="post">

        <div class="body bg-gray">
            <div class="form-group">
                <input id="email" name="email" type="email" placeholder="Email" class="form-control" />
                <div id="email-err" style="display: none; color: #ff0000; padding-bottom: 3px; padding-top: 3px;">Email Required</div>
            </div>
        </div>
        <div class="footer">
            <button id="reset-btn" type="submit" class="btn bg-olive btn-block">Send Email</button>
        </div>
    </form>
</div>

@section scripts {
    <script type="text/javascript">

        jQuery(function () {

            /***************************Login Action*************************************/
            jQuery("#reset-btn").on("click", function (event) {
                event.preventDefault();
                jQuery('#email-err').hide();

                var email = jQuery("#email").val();

                var valid = true;
                if (email == "" || email == null) {
                    valid = false;
                    jQuery("#email-err").show();
                }
                else {
                    $('#resetform').submit();
                }
            });
        });
    </script>
}