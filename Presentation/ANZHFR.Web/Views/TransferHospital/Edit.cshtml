@model ANZHFR.Web.Models.TransferHospitalModel
@using System.Configuration;

@{
    ViewBag.Title = @ConfigurationManager.AppSettings["Location"] + " Hip Fracture Registry - Edit transfer hospital";
}

@Html.Partial("_CreateOrUpdate", Model)

@Html.Partial("_DeleteConfirmation")

@section scripts {

    <script type="text/javascript">

        /**********************************************************************/
        jQuery("#cancel-btn").on("click", function (event) {
            /*event.preventDefault();
            var data = { 'page': jQuery("#Page").val(), 'search': jQuery("#FilterSearch").val() };
            window.location.href = "/hospital?" + EncodeQueryData(data);*/
            history.go(-1);
        });

        /**********************************************************************/
        jQuery("#delete-btn").on("click", function (event) {
            event.preventDefault();
            jQuery("#DeleteItemId").val(jQuery(this).attr("item-id"));
        });

        /**********************************************************************/
        jQuery("#con-delete-btn").on("click", function (event) {
            event.preventDefault();
            var data = { 'page': jQuery("#Page").val(), 'search': jQuery("#FilterSearch").val() };
            window.location.href = "/transferhospital/delete/" + jQuery("#DeleteItemId").val() + "?" + EncodeQueryData(data);
        });
    </script>
}